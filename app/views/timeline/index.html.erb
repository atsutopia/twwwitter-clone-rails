<div class="content">
  <header class="header">
    <div class="content wide">
      <img class="logo" src="/assets/images/icons/tw-icon.svg" />
      <%= link_to "ツイート", new_tweet_path, class: "submit btn tweet" %>
      <%= link_to "ログアウト", session_path, method: :delete, class: "submit btn default logout" %>
    </div>
  </header>
  <div class="hero">
    <div class="container"></div>
    <div class="app">
      <div class="avatar" style="background-image: url('/assets/images/icons/lion.svg');"></div>
    </div>
    <div class="nav">
      <ul class="items">
        <li class="item">
          <div class="label">ツイート</div>
          <div class="num">16,976</div>
        </li>
        <li class="item">
          <div class="label">フォロー</div>
          <div class="num">645</div>
        </li>
        <li class="item">
          <div class="label">フォロワー</div>
          <div class="num">1,329</div>
        </li>
        <li class="item">
          <div class="label">いいね</div>
          <div class="num">18,872</div>
        </li>
      </ul>
    </div>
  </div>
  <div class="timeline">
    <div class="main">
      <div class="sidebar">
        <div class="profile">
          <h1 class="name"><%= @user.username %></h1>
          <h2 class="account"><%= "@#{@user.account }" %></h2>
          <div class="description"><%= @user.introduction %></div>
        </div>
      </div>
      <div class="content">
        <% @tweets.each do |val| %>
          <div class="tweet">
            <div class="content">
              <div class="avatar"><img class="img" src="/assets/images/icons/lion.svg" /></div>
              <div class="main">
                <div class="header">
                  <div class="item name"><%= @user.username %></div>
                  <div class="item account"><%= @user.account %></div>
                  <div class="item date"><%= @user.created_at.strftime("%Y年%m月%d日") %></div>
                </div>
                <div class="text"> <%= val.tweet %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
